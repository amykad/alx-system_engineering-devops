#!/usr/bin/env bash
# Update package list (cached) and install Nginx
sudo apt-get update --download-only
sudo apt-get -y install nginx
# Allow HTTP traffic through UFW firewall
sudo ufw allow 'Nginx HTTP'
# Create a simple index page
echo "Hello World!" | sudo tee /var/www/html/index.nginx-debian.html > /dev/null
# Add rewrite rule to redirect to another page
sudo sed -i "37i\rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;" /etc/nginx/sites-available/default
# Reload Nginx to apply configuration changes
sudo service nginx reload

